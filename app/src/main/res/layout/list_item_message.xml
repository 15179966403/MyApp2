<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/message_image_view"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_dialog_phone"
        android:contentDescription="是否常用平台" />

    <TextView
        android:id="@+id/message_pingtai"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxEms="6"
        android:singleLine="true"
        android:text="@string/message_pingtai_label"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toEndOf="@+id/message_image_view"
        app:layout_constraintTop_toTopOf="@+id/message_image_view" />

    <TextView
        android:id="@+id/message_user_name"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxEms="6"
        android:singleLine="true"
        android:text="@string/message_username_label"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/message_image_view"
        app:layout_constraintEnd_toEndOf="@+id/message_pingtai"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/message_pingtai" />
</android.support.constraint.ConstraintLayout>